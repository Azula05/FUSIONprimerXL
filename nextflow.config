profiles {

  singularity {
    singularity.enabled = true
    process.container = 'arneblom/fusionprimerxl:test'

  }

  local {
  	docker.enabled = true
    process.container = 'arneblom/fusionprimerxl:test'

  }

  example {
    docker.enabled = true
    process.container = 'arneblom/fusionprimerxl:test'
    params.output_dir = "$baseDir/test/output"
    params.input_seq = "./test/test_input.txt"
    params.index_fasta = "$baseDir/test/GRCh38/index_fastahack"
    params.index_fasta_name = "GRCh38.dna.primary_assembly.fa"
    params.index_bowtie = "$baseDir/assets/GRCh38/index_bowtie"
    params.index_bowtie_name = "GRCh38_cdna"
    params.known_exons = "$baseDir/test/GRCh38/known_exons_GRCh38.bed"
    params.help = false
  }

  nf_runner {
    docker.enabled = false
  }

  
}